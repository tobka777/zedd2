{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "allowJs": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "module": "esnext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "moduleResolution": "node",
    "pretty": true,
    "target": "es2019",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts"],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
